<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="ru.aptech.library.entities.Book" table="book" schema="aplib">
        <id name="id">
            <column name="id" sql-type="bigint(20)"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="content">
            <column name="content" sql-type="longblob"/>
        </property>
        <property name="pageCount">
            <column name="page_count" sql-type="int(11)"/>
        </property>
        <property name="isbn">
            <column name="isbn" sql-type="varchar(100)" length="100"/>
        </property>

        <many-to-one name="genre" class="ru.aptech.library.entities.Genre" fetch="join" not-null="true" lazy="false">
            <column name="genre_id" sql-type="bigint(20)" not-null="true"/>
        </many-to-one>

        <many-to-one name="author" class="ru.aptech.library.entities.Author" fetch="join" not-null="true" lazy="false">
            <column name="author_id" sql-type="bigint(20)"/>
        </many-to-one>

        <property name="publishYear">
            <column name="publish_year" sql-type="int(11)"/>
        </property>

        <many-to-one name="publisher" class="ru.aptech.library.entities.Publisher" fetch="join" not-null="true"
                     lazy="false">
            <column name="publisher_id" sql-type="bigint(20)"/>
        </many-to-one>

        <property name="image">
            <column name="image" sql-type="longblob" not-null="true"/>
        </property>
        <property name="descr">
            <column name="descr" sql-type="varchar(5000)" length="5000" not-null="true"/>
        </property>
        <property name="bookcol">
            <column name="bookcol" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="rating">
            <column name="rating" sql-type="int(5)" not-null="true"/>
        </property>
        <property name="voteCount">
            <column name="vote_count" sql-type="bigint(20)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>