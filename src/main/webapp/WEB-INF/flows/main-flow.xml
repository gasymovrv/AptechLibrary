<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <input name="letter" value="null" type="java.lang.Character" required="false"/>

    <on-start>
        <evaluate expression="bookDAOImpl.getBooks()" result="flowScope.bookList"/>
        <evaluate expression="genreDAOImpl.getGenres()" result="flowScope.genreList"/>
        <evaluate expression="utils.getLetters()" result="flowScope.letters"/>
        <evaluate expression="utils.getSearchTypeList()" result="flowScope.searchTypeList"/>
        <evaluate expression="utils.getSelectedSearchType()" result="flowScope.selectedSearchType"/>
        <set name="requestScope.letter" value="requestParameters.letter"/>
    </on-start>

    <view-state id="homePage" view="home-page-list-books">
        <transition on="searchByLetter" to="searchByLetter"/>
    </view-state>

    <action-state id="searchByLetter">
        <evaluate expression="searchCriteria.setLetter(letter)"/>
        <evaluate expression="bookService.searchBookByLetter()" result="flowScope.bookList"/>
        <transition to="homePage"/>
    </action-state>
</flow>